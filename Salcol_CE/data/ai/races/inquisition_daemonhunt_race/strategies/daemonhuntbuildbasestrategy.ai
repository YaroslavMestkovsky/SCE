function DaemonhuntBuildBaseStrategy:ChooseBuildProgram()

	-- Check build program count
	if (table.getn(self.info.BuildPrograms) ~= 4) then
		return BuildBaseStrategy.ChooseBuildProgram(self)
	end
	return 1
end

function DaemonhuntBuildBaseStrategy:EvaluateSquadCap()
-- Check squad cap
	if (self:CheckSquadCap(150, 0)) then
		
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research
		
		if (not cpu_manager.cpu_player:IsResearchComplete( "inquisition_squad_cap_research" )) then
			tBuildType.name = "inquisition_squad_cap_research"
		elseif not cpu_manager.cpu_player:IsResearchComplete( "inquisition_squad_cap_research_1" ) then
			tBuildType.name = "inquisition_squad_cap_research_1"
		else
			return
		end
		
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end
		
	-- Check support cap
	if (self:CheckSupportCap(150, 0)) then
		
		local tBuildType = CpuBuildType()
		tBuildType.btype = CpuPrerequisites.BT_Research
		
		if (not cpu_manager.cpu_player:IsResearchComplete( "inquisition_support_cap_research" )) then
			tBuildType.name = "inquisition_support_cap_research"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "inquisition_support_cap_research_1" )) then
			tBuildType.name = "inquisition_support_cap_research_1"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "inquisition_support_cap_research_2" )) then
			tBuildType.name = "inquisition_support_cap_research_2"
		elseif (not cpu_manager.cpu_player:IsResearchComplete( "inquisition_support_cap_research_3" )) then
			tBuildType.name = "inquisition_support_cap_research_3"
		else
			return
		end
		
		if (self:TryBuild( tBuildType )) then
			aitrace("BuildController: Dynamic research of "..tBuildType.name)
		end
	end
end

